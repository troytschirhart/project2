<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <% include ../partials/head.ejs %>
</head>
  <body>

    <div class="headerContainer">

      <form action="/sessions?_method=DELETE" method="POST">
        <input type="submit" value="Log Out" class="button">
      </form>

      <h1><%=currentUser.username%>'s Beers Index</h1>

      <form action="/beers/new" >
        <input type="submit" name="" value="Add a New Beer" class="button">
      </form>

    </div>



    <div class="containerContainer">

      <% for (let i = 0; i < currentUser.beerList.length; i++) { %>
        <div class="beerContainer">
          <h2><%=currentUser.beerList[i].name%></h2>
          <h3><%=currentUser.beerList[i].type%></h3>
          <h3><%=currentUser.beerList[i].brewery%></h3>
          <h3><%=currentUser.beerList[i].id%></h3>
          <!-- <a href="/beers/<%=currentUser.beerList[i].id%>"> -->
          <a href="/beers/<%=currentUser.id%>/<%=i%>">

            <img src="<%=currentUser.beerList[i].image%>" alt="" class="beerPic">
          </a>
        </div>
      <% } %>
    </div>
  </body>
</html>
